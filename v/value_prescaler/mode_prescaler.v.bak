//switch mode prescaler

module switch_mode_prescaler (

	input switch [2:0],
	input clk,
	input reset,
	
	output reg switch_value [2:0]
	
	);
	
	always @ (posedge clk or negedge reset) begin
		case (switch)
			3'b000: switch_value = 3'b000; 	//50x prescaler
			3'b001: switch_value = 3'b001;	//10x prescaler
			3'b010: switch_value = 3'b010;	//25x prescaler
			3'b011: switch_value = 3'b011;	//20x prescaler
			3'b100: switch_value = 3'b100;	//25x prescaler
			3'b101: switch_value = 3'b101;	//50x prescaler
			3'b110: switch_value = 3'b110;	//75x prescaler
			3'b111: switch_value = 3'b111;	//100x prescaler
		endcase
	end
	
endmodule